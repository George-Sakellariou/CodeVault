@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center bg-primary text-white p-5 rounded-4 shadow-sm">
    <div class="container py-4">
        <h1 class="display-4 fw-bold">Welcome to CodeVault</h1>
        <p class="lead">Your intelligent code repository and assistant for better software development</p>
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Chat" asp-action="Index" class="btn btn-light btn-lg px-4">
                <i class="bi bi-chat-text me-2"></i>Start Chat
            </a>
            <a asp-controller="CodeView" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-code-square me-2"></i>Browse Code
            </a>
        </div>
    </div>
</div>

<div class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-lightbulb text-primary" style="font-size: 2.5rem;"></i>
                        <h3 class="card-title mt-3">AI Code Assistant</h3>
                        <p class="card-text">Get intelligent explanations, optimizations, and guidance for your code with our AI-powered chat interface.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-code-slash text-primary" style="font-size: 2.5rem;"></i>
                        <h3 class="card-title mt-3">Code Repository</h3>
                        <p class="card-text">Store, search, and share code snippets across multiple programming languages with semantic search capabilities.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="bi bi-shield-check text-primary" style="font-size: 2.5rem;"></i>
                        <h3 class="card-title mt-3">Analysis Tools</h3>
                        <p class="card-text">Security scanning, performance analysis, and code comparison tools to improve code quality and safety.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="py-4 bg-light rounded-4 shadow-sm">
    <div class="container">
        <h2 class="text-center mb-4">Popular Languages</h2>
        <div class="row g-3">
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-js mx-auto mb-2">JS</div>
                    <span class="d-block fw-medium">JavaScript</span>
                </a>
            </div>
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-py mx-auto mb-2">PY</div>
                    <span class="d-block fw-medium">Python</span>
                </a>
            </div>
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-cs mx-auto mb-2">C#</div>
                    <span class="d-block fw-medium">C#</span>
                </a>
            </div>
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-java mx-auto mb-2">JV</div>
                    <span class="d-block fw-medium">Java</span>
                </a>
            </div>
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-ts mx-auto mb-2">TS</div>
                    <span class="d-block fw-medium">TypeScript</span>
                </a>
            </div>
            <div class="col-4 col-md-2">
                <a href="#" class="d-block p-3 text-center text-decoration-none rounded shadow-sm bg-white">
                    <div class="lang-indicator lang-sql mx-auto mb-2">SQL</div>
                    <span class="d-block fw-medium">SQL</span>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Recently Added Code Snippets</h2>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-medium">Async/Await Error Handling</span>
                        <div class="lang-indicator lang-js">JS</div>
                    </div>
                    <div class="card-body">
                        <pre><code class="language-javascript">async function fetchData() {
  try {
    const response = await fetch('https://api.example.com/data');
    if (!response.ok) {
      throw new Error(`HTTP error: ${response.status}`);
    }
    const data = await response.json();
    return data;
  } catch (error) {
    console.error('Fetch error:', error);
    throw error;
  }
}</code></pre>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div>
                                <span class="code-tag">async</span>
                                <span class="code-tag">error-handling</span>
                            </div>
                            <span class="text-muted small">Added 2 days ago</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-medium">LINQ Group By Example</span>
                        <div class="lang-indicator lang-cs">C#</div>
                    </div>
                    <div class="card-body">
                        <pre><code class="language-csharp">var groupedResult = products
    .GroupBy(p => p.Category)
    .Select(g => new {
        Category = g.Key,
        Count = g.Count(),
        TotalPrice = g.Sum(p => p.Price),
        AveragePrice = g.Average(p => p.Price),
        Products = g.ToList()
    })
    .OrderByDescending(g => g.Count)
    .ToList();</code></pre>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div>
                                <span class="code-tag">linq</span>
                                <span class="code-tag">groupby</span>
                            </div>
                            <span class="text-muted small">Added 5 days ago</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            document.querySelectorAll('pre code').forEach((block) => {
                hljs.highlightBlock(block);
            });
        });
    </script>
}