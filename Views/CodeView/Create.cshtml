@model CodeSnippet
@{
    ViewData["Title"] = "Add New Code Snippet";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="CodeView" asp-action="Index">Code Snippets</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add New</li>
                </ol>
            </nav>
            <h2 class="mt-2 mb-4">Add New Code Snippet</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input asp-for="Title" class="form-control" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Language" class="form-label">Programming Language</label>
                                <select asp-for="Language" class="form-select" required>
                                    <option value="">Select language...</option>
                                    <option value="JavaScript">JavaScript</option>
                                    <option value="TypeScript">TypeScript</option>
                                    <option value="Python">Python</option>
                                    <option value="C#">C#</option>
                                    <option value="Java">Java</option>
                                    <option value="PHP">PHP</option>
                                    <option value="HTML">HTML</option>
                                    <option value="CSS">CSS</option>
                                    <option value="Ruby">Ruby</option>
                                    <option value="Go">Go</option>
                                    <option value="Rust">Rust</option>
                                    <option value="SQL">SQL</option>
                                    <option value="Shell">Shell/Bash</option>
                                    <option value="PowerShell">PowerShell</option>
                                </select>
                                <span asp-validation-for="Language" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Code Content</label>
                            <textarea asp-for="Content" class="form-control code-editor" rows="12" required></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label for="tags" class="form-label">Tags</label>
                            <input type="text" id="tags" name="tags" class="form-control" placeholder="Enter tags separated by commas (e.g. algorithm, sorting, javascript)" />
                            <div class="form-text">Tags help categorize and find your code more easily</div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-lg me-1"></i>Save Code Snippet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize a basic CodeMirror editor if available
            if (typeof CodeMirror !== 'undefined') {
                var editor = CodeMirror.fromTextArea(document.getElementById("Content"), {
                    lineNumbers: true,
                    mode: "text/plain",
                    theme: "vscode-dark",
                    indentUnit: 4,
                    smartIndent: true,
                    tabSize: 4,
                    indentWithTabs: false,
                    lineWrapping: true,
                    extraKeys: {"Tab": "insertSoftTab"}
                });

                // Change mode based on selected language
                $('#Language').change(function() {
                    const language = $(this).val().toLowerCase();
                    let mode = "text/plain";

                    switch(language) {
                        case "javascript":
                            mode = "text/javascript";
                            break;
                        case "typescript":
                            mode = "text/typescript";
                            break;
                        case "python":
                            mode = "text/x-python";
                            break;
                        case "c#":
                            mode = "text/x-csharp";
                            break;
                        case "java":
                            mode = "text/x-java";
                            break;
                        case "php":
                            mode = "application/x-httpd-php";
                            break;
                        case "html":
                            mode = "text/html";
                            break;
                        case "css":
                            mode = "text/css";
                            break;
                        case "sql":
                            mode = "text/x-sql";
                            break;
                        case "shell":
                        case "bash":
                            mode = "text/x-sh";
                            break;
                        default:
                            mode = "text/plain";
                    }

                    editor.setOption("mode", mode);
                });
            }

            // Initialize tag input
            $('#tags').tagsinput({
                trimValue: true,
                confirmKeys: [13, 44, 32], // Enter, comma, space
                maxTags: 10
            });
        });
    </script>

    <style>
        .code-editor {
            font-family: 'JetBrains Mono', monospace;
            font-size: 14px;
        }

        .bootstrap-tagsinput {
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }

            .bootstrap-tagsinput .tag {
                margin-right: 2px;
                padding: 0.2em 0.6em;
                color: #fff;
                background-color: #3740FF;
                border-radius: 0.25rem;
                display: inline-block;
            }
    </style>
}